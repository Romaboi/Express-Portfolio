<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Main Content -->
<main class ="container">
    <div class ="row">
        <div class = "col-md-offset-1.col-md-10">
            <h1><%= title %></h1>
            <br>
            <a href="/book-list/add" class="btn btn-primary" role="button">
            <i class="fas fa-plus circle"></i> Add a Contact</a>
            <br><br>
            <table class="table table-bordered table-striped table-hover">
                <!--Header Row -->
                <tr>
                    <th class="text-center">Name</th>
                    <th class="text-center">Phone Number</th>
                    <th class="text-center">Email Address</th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                </tr>

                <!--Repeatable Template Row-->

                <% for(let count = 0; count < Booklist.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= Booklist[count].name %></td>
                        <td class="text-center"><%= Booklist[count].phone %></td>
                        <td class="text-center"><%= Booklist[count].email %></td>
                        <td class="text-center">
                            <a href="/book-list/edit/<%= Booklist[count]._id %>" class="btn btn-primary">
                            <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center">
                            <a href="/book-list/delete/<%= Booklist[count]._id %>" class="btn btn-danger">
                                <i class="fas fa-trash alt"></i> Delete</a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>

</main>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>