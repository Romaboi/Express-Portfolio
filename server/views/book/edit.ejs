<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contact's Name"
                    name="name" 
                    value ="<%= book.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="phoneTextField">Phone</label>
                    <input type="text" class="form-control"
                    id="phoneTextField"
                    placeholder="Enter the Phone Number"
                    name="phone" 
                    value ="<%= book.phone %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Eear</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Email Address"
                    name="email" 
                    value ="<%= book.email %>"
                    required>
                </div>

                <br>
                
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Finish Edit</button>

                    <a href="/book-list" class="btn btn-warning"><i class="fas fa-undo">
                    </i> Cancel</a>

                    <a href="/book-list/delete/<%= book._id %>" class="btn btn-danger">
                        <i class="fas fa-trash alt"></i> Delete</a>

            </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>